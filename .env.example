# SignalFlow Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Database
AGENT_DB_PATH=agent.db

# Environment (development, staging, production)
SIGNALFLOW_ENV=development

# Device Configuration
SIGNALFLOW_DEVICE_ID=  # Leave empty to auto-generate UUID
SIGNALFLOW_DEVICE_NAME=signalflow-personal
SIGNALFLOW_DEVICE_TYPE=desktop

# Supabase Configuration (for cloud sync)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_key_here
SUPABASE_ENCRYPTION_KEY=  # Leave empty to auto-generate

# mDNS Discovery
SIGNALFLOW_MDNS_ENABLED=true

# API Configuration
SIGNALFLOW_API_PORT=8001

# Logging
SIGNALFLOW_LOG_LEVEL=INFO

# Mobile Configuration
SIGNALFLOW_MOBILE_ALLOWED=true

# LangSmith Tracing Configuration
# Enable to trace all agent LLM calls with automatic tagging
# Get your API key from https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=signalflow

# LangGraph Configuration (Optional - for multi-agent orchestration)
LANGGRAPH_ENABLED=false
LANGGRAPH_CHECKPOINT_PROVIDER=sqlite
LANGGRAPH_CHECKPOINT_PATH=./langgraph_checkpoints.db
